{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
